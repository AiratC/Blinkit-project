

{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "distDir": "dist" // Ваш выходной каталог сборки Vite
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.js" // Путь к вашему серверному файлу после сборки
    }
  ],
  "functions": {
    "api/server.js": {
      "memory": 1024,
      "maxDuration": 300
    }
  }
}